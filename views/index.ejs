<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <link rel="stylesheet" href="css/index.css">
        <title>Critter Cafe</title>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        <%- include('_universal') %>
    </head>
    <body>
        <%- include('_header',{username:username})%>
        <h1>THIS IS THE HOMEPAGE OF CRITTERCAFE</h1>
        <% if (info) { %>
            <%- include('_modal',{info:info}) %>
        <% } %>

        <% if (username) { %>
            <h3>logged in:</h3>
            <p><%= username %></p>
            <br>
            <a href="/api/signout">signout</a>
        <% } else { %>
            <h3>you are not signed in</h3>
            <p>sign in to contribute to critter cafe</p>
        <% } %>

        
        
        <script src="js/script.js"></script>
    </body>
</html>