<a href="/recipe/<%- uri %>">
<div class="recipe_widget">
    <img src="../<%= img %>" alt="">
    <div>
        <h3><%= title %></h3>
        <p>by: <%= username %></p>
    </div>
    <% if(likes.length-dislikes.length > 0){ %>
        <span class="vote_good"><%= likes.length-dislikes.length %></span>
    <% } else if(likes.length-dislikes.length < 0){%>
        <span class="vote_bad"><%= likes.length-dislikes.length %></span>
    <% } else { %>
        <span class="vote_neutral"><%= likes.length-dislikes.length %></span>
    <% } %>
</div>
</a>